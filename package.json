{
  "name": "enjanga-portfolio",
  "version": "0.2.0",
  "private": true,
  "repository": "git@github.com:ericnjanga/enjanga-portfolio.git",
  "bugs": "https://github.com/ericnjanga/enjanga-portfolio/issues",
  "license": "Apache-2.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint && tsc --noEmit",
    "ci-check": "yarn format:diff",
    "clean": "rimraf node_modules .next dist && yarn install",
    "clean:hard": "rimraf node_modules .next dist yarn.lock && yarn cache clean && yarn install",
    "format": "prettier --write \"**/*.{js,ts,md,scss}\"",
    "format:diff": "prettier --list-different \"**/*.{js,ts,md,scss}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "enjanga-components-library": "^1.0.26",
    "enjanga-core-setup": "^1.0.20",
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-is": "^19.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/dotenv": "^8.2.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.0.3",
    "dotenv": "^17.2.2",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "jsdom": "^27.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "whatwg-fetch": "^3.6.20"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --cache --write",
      "git add"
    ],
    "*.{scss,css}": [
      "prettier --cache --write",
      "git add"
    ],
    "*.md": [
      "prettier --cache --write",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
